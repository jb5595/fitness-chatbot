{
  "compilerOptions": {
    "target": "ESNext",
     "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "ts-node": {
    "esm": true
  },
    "lib": ["esnext"],
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }